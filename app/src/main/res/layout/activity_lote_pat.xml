<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/screen"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:padding="@dimen/screen_padding"
              tools:context="br.com.whitemartins.obc.views.CustomerOrderActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btnAnteriorLoteFabricacao"
            android:layout_width="@dimen/btn_prior_next_w"
            android:layout_height="@dimen/btn_prior_next_h"
            android:layout_gravity="left"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:background="#fafafa"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/ic_voltar"/>

        <ImageButton
            android:id="@+id/btnPosteriorLoteFabricacao"
            android:layout_width="@dimen/btn_prior_next_w"
            android:layout_height="@dimen/btn_prior_next_h"
            android:background="#fafafa"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/ic_avancar"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtDescricaoItemLoteFabricacao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:layout_weight="1"
            android:text="@string/item"/>


    </LinearLayout>

    <TextView
        android:id="@+id/txtTipoItemLoteFabricacao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:text="@string/lot_fab"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edtNumLoteFabricacao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYçÇZabcdefghijklmnopqrstuvwxyz1234567890:;,.-!?/%@() "
            android:enabled="true"
            android:maxLength="25"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnBarcodeLotPat"
                android:layout_width="@dimen/button_w"
                android:layout_height="@dimen/button_h"
                android:layout_gravity="center"
                android:background="@color/appTextColorWithBackground"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/ic_ler_codigo_barra"/>

            <ImageButton
                android:id="@+id/btnConfirmarLoteFabricacao"
                android:layout_width="@dimen/button_w"
                android:layout_height="@dimen/button_h"
                android:layout_marginLeft="10dp"
                android:background="@color/appTextColorWithBackground"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/ic_confirmar"/>
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/txtContadorLoteFabricacao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:gravity="center_horizontal"
        android:text="@string/item"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btnFinalizarLoteFabricacao"
            android:layout_width="@dimen/button_w"
            android:layout_height="@dimen/button_h"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="20dp"
            android:background="#fafafa"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/ic_finalizar"/>

    </LinearLayout>

</LinearLayout>

