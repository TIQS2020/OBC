<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context="br.com.whitemartins.obc.views.TransferActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btnTransfUnidade"
            android:layout_width="@dimen/cust_btn_w"
            android:layout_height="@dimen/cust_btn_w"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/ic_transferencia_unidades"/>

        <ImageButton
            android:id="@+id/btnComplementoCarga"
            android:layout_width="@dimen/cust_btn_h"
            android:layout_height="@dimen/cust_btn_h"
            android:layout_marginLeft="5dp"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/ic_complemento_carga"/>

    </LinearLayout>

</LinearLayout>
