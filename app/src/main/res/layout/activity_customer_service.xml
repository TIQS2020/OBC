<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context="br.com.whitemartins.obc.views.CustomerServiceActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btnAtend"
            android:layout_width="@dimen/cust_btn_w"
            android:layout_height="@dimen/cust_btn_h"
            android:background="@android:color/transparent"
            android:padding="5dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/ic_atendimento_cliente"/>

        <ImageButton
            android:id="@+id/btnTransfEsqtoque"
            android:layout_width="@dimen/cust_btn_h"
            android:layout_height="@dimen/cust_btn_h"
            android:background="@android:color/transparent"
            android:padding="5dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/ic_transfere_estoque"/>

        <ImageButton
            android:id="@+id/btnEmissaoRelatorio"
            android:layout_width="@dimen/cust_btn_w"
            android:layout_height="@dimen/cust_btn_w"
            android:background="@android:color/transparent"
            android:padding="5dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/ic_emissao_relatorio"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btnConsultaNfe"
            android:layout_width="@dimen/cust_btn_w"
            android:layout_height="@dimen/cust_btn_h"
            android:background="@android:color/transparent"
            android:padding="5dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/ic_consulta_cancela_nfe"/>

        <ImageButton
            android:id="@+id/btnReimpressaoCec"
            android:layout_width="@dimen/cust_btn_w"
            android:layout_height="@dimen/cust_btn_w"
            android:background="@android:color/transparent"
            android:padding="5dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/ic_reimpressao_cec"/>

        <ImageButton
            android:id="@+id/btnRecuperaCliente"
            android:layout_width="@dimen/cust_btn_w"
            android:layout_height="@dimen/cust_btn_w"
            android:background="@android:color/transparent"
            android:padding="5dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/ic_recuperar_cliente"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btnConsultTravelData"
            android:layout_width="@dimen/cust_btn_w"
            android:layout_height="@dimen/cust_btn_w"
            android:background="@android:color/transparent"
            android:padding="5dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/ic_consulta_dados_viagem"/>

        <ImageButton
            android:id="@+id/btnRefazerViagem"
            android:layout_width="@dimen/cust_btn_w"
            android:layout_height="@dimen/cust_btn_w"
            android:background="@android:color/transparent"
            android:padding="5dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/ic_refazer_vigem"/>

        <ImageButton
            android:id="@+id/btnFimViagem"
            android:layout_width="@dimen/cust_btn_w"
            android:layout_height="@dimen/cust_btn_w"
            android:background="@android:color/transparent"
            android:padding="5dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/ic_fim_de_viagem"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/screen_padding"
        android:orientation="vertical">

        <ProgressBar
            android:id="@+id/pbar1"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:progressTint="@color/appColor"
            android:progressTintMode="src_atop"/>

        <TextView
            android:id="@+id/textProgress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pbar1"/>

    </LinearLayout>
</LinearLayout>
