<resources>

    <style name="EditTextStyle" parent="android:Widget.Holo.EditText">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@drawable/custom_edit_text_color</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:color">@color/appTextColor</item>
    </style>

    <style name="TextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">monospace</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/appTextColor</item>
    </style>

    <style name="CheckedTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">monospace</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/appTextColor</item>
    </style>

    <style name="SpinnerStyle" parent="Platform.Widget.AppCompat.Spinner">
        <item name="android:fontFamily">monospace</item>
        <item name="android:textSize">@dimen/spinner_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/appTextColor</item>
        <item name="android:background">@color/appDisableButtonColor</item>
    </style>

    <style name="SwitchTheme" parent="Theme.AppCompat.Light">
        <item name="android:colorControlActivated">@color/appColor</item>
        <item name="android:colorAccent">@color/appColor</item>
        <item name="colorSwitchThumbNormal">@color/appColor</item>
        <item name="android:colorForeground">@color/appColor</item>
    </style>

    <style name="ProgressBar" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/appColor</item>
    </style>

    <style name="AlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColorPrimary">@color/red</item>
        <item name="android:colorAccent">@color/appTextColor</item>
    </style>

    <style name="RobotoRadioButtonStyle" parent="android:Widget.Holo.CompoundButton.RadioButton">
        <item name="android:fontFamily">monospace</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/appTextColor</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/appColor</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/common_google_signin_btn_text_dark_focused</item>
        <!--<item name="colorAccent">@color/colorAccent</item>-->
        <item name="editTextStyle">@style/EditTextStyle</item>
        <item name="android:textViewStyle">@style/TextViewStyle</item>
        <item name="radioButtonStyle">@style/RobotoRadioButtonStyle</item>
        <item name="android:spinnerItemStyle">@style/SpinnerStyle</item>
        <item name="android:checkedTextViewStyle">@style/CheckedTextViewStyle</item>
        <!--<item name="android:spinnerStyle">@style/SpinnerStyle</item>-->
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>


</resources>
